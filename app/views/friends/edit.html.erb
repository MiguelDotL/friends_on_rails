<div class="card">
  <div class="card-header">
    <h4>Editing friend</h4>
  </div>

  <div class="card-body">
    <%= render "form", friend: @friend %>

  </div>
</div>

<div class="mt-4">
  <%= link_to "Show", @friend, class: "btn btn-secondary me-1" %>
  <%= link_to "Delete", @friend, 
      data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, 
      class: "btn btn-danger me-1" %>
  <%= link_to "Back", friends_path, class: "btn btn-dark" %>
</div>
