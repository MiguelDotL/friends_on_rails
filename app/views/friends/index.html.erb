      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <!--<th>User Id</th>
        <th colspan="2"></th>-->
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
