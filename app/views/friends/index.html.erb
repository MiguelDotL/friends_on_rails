            <td><%= link_to "🔍 View - #{full_name}", friend, 
                    class: "btn btn-sm btn-outline-dark" %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
