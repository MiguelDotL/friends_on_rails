<div class="card">
  <div class="card-header">
    <h4>Log in</h4>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-floating mt-2 mb-3">
        <%= f.email_field :email,
            id: :email,
            class:"form-control",
            autofocus: true, 
            placeholder: :email,
            autocomplete: "email" %>
        <%= f.label :email, for: :email %>
      </div>

      <div class="field form-floating mb-3">
        <%= f.password_field :password, 
            id: :password,
            class:"form-control",
            placeholder: :password,
            autocomplete: "current-password" %>
        <%= f.label :password, for: :password %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check form-switch mb-3">
          <%= f.check_box :remember_me, class: "form-check-input", role: "switch" %>
          <%= f.label :remember_me %>
        </div>
      <% end %> 

      <div class="actions mt-4">
        <%= f.submit "Log in", { class: "btn btn-secondary me-2", :style => 'display: inline-block;' } %>
        <%= link_to "Sign up", 
          new_registration_path(resource_name), 
          { class: "btn btn-outline-secondary", 
          :style => 'display: inline-block;' } %>  
      </div>
    <% end %>
    <div class="text-end"><%= render "devise/shared/links" %></div>
    </div>

  </div>


